services:

  backend:
    build: ./backend
    ports:
      - "8000:8000"
    volumes:
      - /configs/params:/configs/params:ro
      - /backupssh:/backupssh:ro
      - /var/run/docker.sock:/var/run/docker.sock
      - backend_data:/app
    restart: unless-stopped

  frontend:
    build: ./frontend
    ports:
      - "4173:4173"
    depends_on:
      - backend
    restart: unless-stopped

volumes:
  backend_data:
